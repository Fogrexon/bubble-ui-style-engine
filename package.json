{
  "name": "vite-library-template",
  "version": "0.1.0",
  "description": "A template for building libraries with Vite and TypeScript",
  "main": "build/commonjs/src/index.js",
  "module": "build/es/src/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint:prettier": "prettier \"./src/**/*.ts\"",
    "lint:eslint": "eslint \"./src/**/*.ts\"",
    "lint:fix": "prettier \"./src/**/*.ts\" --write & eslint \"./src/**/*.ts\" --fix",
    "docs": "typedoc --out api-docs/ ./src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Fogrexon/ViteLibraryTemplate.git"
  },
  "author": "Fogrexon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Fogrexon/ViteLibraryTemplate/issues"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "@vitest/coverage-v8": "^3.1.3",
    "@vitest/ui": "^3.1.3",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.5.3",
    "typedoc": "^0.28.4",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^3.1.3"
  },
  "volta": {
    "node": "22.15.0"
  }
}
